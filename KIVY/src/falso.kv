Manager:
    Uno:

<Uno>
    name:"one"
    juga:juga
    nombre:nombre
    qcartas:qcartas
    objetivo:objetivo

    BoxLayout:
        orientation:"vertical"
        GridLayout:
            size_hint_x: 1
            size_hint_y:.1
            cols: 3
            orientation:"horizontal"
            TextInput:
                id: qcartas
                hint_text:"Q de Cartas"
            TextInput:
                id: objetivo
                hint_text:"Objetivo"
            TextInput:
                id: nombre
                hint_text:"Agregar Jugador"
                multiline:False
        GridLayout:
            size_hint_x: 1
            size_hint_y:.1
            cols: 3
            orientation:"horizontal"

            Button:
                id: agregar
                text:"Agregar"
                on_press: root.agregar()
            Button:
                id: borrar
                text:"Borrar"
                on_press: root.borrar()
                disabled: True
            Button:
                id: reiniciar
                text:"Reiniciar"
                on_press: root.reiniciar()
                disabled: True
        GridLayout:
            size_hint_x: 1
            size_hint_y:.1
            cols: 3
            orientation:"horizontal"
            Label:
                text:""
            Button:
                id: empezar
                text:"Empezar"
                on_press: root.empezar()
                disabled: True
            Label:
                text:""
        BoxLayout:
            id:grid
            orientation:"horizontal"
            Label:
                id: juga
                text:""