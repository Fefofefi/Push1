WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"
    cartas : cartas
    objetivo : objetivo

    GridLayout:
        cols:1

        GridLayout:
            cols: 2
            Label:
                text:"Cartas: "
            TextInput:
                id: cartas
                multiline: False
            Label:
                text:"Objetivo: "
            TextInput:
                id: objetivo
                multiline: False
        Button:
            text: "Siguiente>>"
            on_press: root.btn()
            on_release:
                app.root.current= "second"
                root.manager.transition.direction="left"
<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current= "main"
            root.manager.transition.direction="right"